{
  "name": "backend",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/postgres": "^1.14.2",
    "@sap/cds": "^8",
    "express": "^4"
  },
  "devDependencies": {
    "sqlite3": "^5.1.7"
  },
  "scripts": {
    "start": "cds-serve",
    "deploy": "node init-db-simple.js"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "postgres",
        "credentials": {
          "url": "$DATABASE_URL",
          "ssl": {
            "rejectUnauthorized": false
          }
        },
        "pool": {
          "min": 0,
          "max": 1,
          "acquireTimeoutMillis": 120000
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "sebas": {
            "password": "123",
            "roles": [
              "admin"
            ]
          }
        }
      }
    }
  }
}